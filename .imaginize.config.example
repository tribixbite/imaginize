# imaginize configuration file v2.0
# Place this file as .imaginize.config in your home directory or project directory

# API Keys - set these or use environment variables
# apiKey: "your-api-key-here"

# Text Analysis Model Configuration
# model: "gpt-4o-mini"                    # Default: gpt-4o-mini (cheap, fast)
# model: "gpt-4o"                         # Premium: gpt-4o (better quality)
# model: "openrouter/anthropic/claude-3.5-sonnet"  # OpenRouter provider

# Image Generation Configuration
# imageEndpoint:
#   provider: "openai"                    # openai, openrouter, or custom
#   baseUrl: "https://api.openai.com/v1" # API base URL
#   apiKey: "your-image-api-key"         # Optional separate key for images
#   model: "dall-e-3"                     # Image model: dall-e-3, gpt-image-1, imagen-3.0-generate-001

# Output Configuration
outputPattern: "imaginize_{name}"        # Output directory pattern

# Processing Settings
pagesPerImage: 10                        # Target: 1 image per N pages (AI suggestion, not strict limit)
extractElements: true                    # Extract story elements (characters, places, etc.)
generateElementImages: false             # Generate images for story elements

# Image Quality
imageSize: "1024x1024"                   # 1024x1024, 1024x1792, or 1792x1024
imageQuality: "standard"                 # standard or hd

# Performance & Rate Limiting
maxConcurrency: 3                        # Parallel API requests
maxRetries: 1                            # Retry failed requests
retryTimeout: 5000                       # Millisecond delay between retries

# Chapter Auto-splitting
pagesPerAutoChapter: 50                  # Max pages per auto-generated chapter
tokenSafetyMargin: 0.9                   # Use 90% of model's token limit
